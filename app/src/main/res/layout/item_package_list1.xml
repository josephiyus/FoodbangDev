<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_package1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">
        
        <ImageView
            android:id="@+id/iv_package1"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingStart="8dp">

            <RelativeLayout
                android:id="@+id/ll_package"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/tv_package_name1"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Package Name"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_merchant_name"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Merchant Name"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:layout_below="@+id/tv_package_name1"/>

                <RatingBar
                    android:id="@+id/rb_package"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?attr/ratingBarStyleSmall"
                    android:layout_below="@+id/tv_merchant_name"/>

                <TextView
                    android:textSize="10sp"
                    android:id="@+id/tv_package_description"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_below="@+id/rb_package"/>

                <TextView
                    android:id="@+id/tv_package_price"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="Rp. 200.000"
                    android:background="@drawable/bg_rounded_red_one"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/tv_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/rb_package"
                    android:layout_toEndOf="@+id/rb_package"
                    android:layout_below="@+id/tv_merchant_name"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp" />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_favorite_black_24dp"
                    android:layout_below="@id/tv_rating"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="8dp"/>

        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>